<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorOnPrimary">@color/blanco</item>

        <item name="colorSecondary">@color/green_light</item>
        <item name="colorSecondaryVariant">@color/green</item>

        <item name="android:windowBackground">@color/dark_background</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/blanco</item>

        <item name="android:textColor">@color/blanco</item>
    </style>
    <style name="Button.Modern" parent="Widget.Material3.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="backgroundTint">@color/green</item>
    </style>

    <!-- Estilo para botones con esquinas redondeadas -->
    <style name="Button.Modern.Rounded" parent="Button.Modern">
        <item name="cornerRadius">24dp</item>
    </style>

    <!-- Estilo para botones con relleno -->
    <style name="Button.Modern.Filled" parent="Button.Modern">
        <item name="android:elevation">2dp</item>
    </style>

    <!-- Estilo para botones con contorno -->
    <style name="Button.Modern.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeColor">@color/green</item>
        <item name="android:textColor">@color/green</item>
    </style>
</resources>