<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/blanco">

    <!-- Botón para crear una nueva liga -->
    <Button
        android:id="@+id/btnCrearLiga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crear Liga"
        android:textColor="@color/blanco"
        android:background="@color/verde_sec"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Texto informativo sobre las ligas -->
    <TextView
        android:id="@+id/tvLigasCreadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Últimos fichajes:"
        android:textSize="18sp"
        android:textColor="@color/negro"
        android:layout_marginBottom="8dp" />

    <!-- Scroll de las ligas -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/llListaLigas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

    <!-- Texto informativo sobre las jornadas -->
    <TextView
        android:id="@+id/tvProximasJornadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Próximas jornadas"
        android:textSize="18sp"
        android:textColor="@color/negro"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <!-- Scroll de las jornadas -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/llListaJornadas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

</LinearLayout>
